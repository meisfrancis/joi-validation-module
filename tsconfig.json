{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "es2019",
    "lib": [
      "es2019",
      "esnext.asynciterable"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "pretty": true,
    "sourceMap": true,
    "outDir": "./build",
    "allowJs": true,
    "noEmit": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": [
    "./src/**/*",
    "./src/**/*.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
